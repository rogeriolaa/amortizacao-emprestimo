{
  "name": "amortizacao-emprestimo",
  "version": "1.0.0",
  "type": "module",
  "description": "Cálculo de amortização de empréstimos nos sistemas SAC, PRICE e SAM em TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c && node scripts/copy-to-example.js",
    "copy-to-example": "node scripts/copy-to-example.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docs": "typedoc src/index.ts --out docs",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d example",
    "serve": "npx browser-sync start --server 'example' --files 'example/**/*.*' --port 3000",
    "dev": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rogeriolaa/amortizacao-emprestimo.git"
  },
  "homepage": "https://rogeriolaa.github.io/amortizacao-emprestimo",
  "keywords": [
    "amortização",
    "empréstimo",
    "SAC",
    "PRICE",
    "SAM",
    "typescript"
  ],
  "author": "Rogerio Amorim <rogeriol@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^29.5.0",
    "decimal.js": "^10.6.0",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "rollup": "^4.49.0",
    "ts-jest": "^29.1.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  }
}
